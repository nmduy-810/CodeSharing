@model CodeSharing.WebPortal.ViewModels.HeaderViewModel

<!-- header -->
<header class="header-personal">
    <div class="container-xl header-top">
        <div class="row align-items-center">
            <div class="col-4 d-none d-md-block d-lg-block">
                <!-- social icons -->
                <ul class="social-icons list-unstyled list-inline mb-0">
                    <partial name="_SocialIcons"/>
                </ul>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12 text-center">
                <!-- site logo -->
                <a class="navbar-brand" href="/">
                    <img src="~/images/other/logo.png" alt="logo" style="width: 80px; height: 80px;"/>
                </a>
                <a href="/about" class="d-block text-logo">
                    CodeSharing<span class="dot">.</span>
                </a>
                <span class="slogan d-block">Chia sẻ mọi thứ bạn cần</span>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <!-- header buttons -->
                <div class="header-buttons float-md-end mt-4 mt-md-0">
                    <button class="search icon-button">
                        <i class="icon-magnifier"></i>
                    </button>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg">
        <div class="container-xl">
            <div class="collapse navbar-collapse justify-content-center centered-nav">
                <!-- menus -->
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    @foreach (var item in Model.Categories)
                    {
                        var url = "/category/" + item.Slug + "-" + item.Id;
                        if (item.ParentCategoryId == null && item.IsParent)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="@url">@item.Title</a>
                                <ul class="dropdown-menu">
                                    @foreach (var subItem in Model.Categories.Where(x => x.ParentCategoryId == item.Id))
                                    {
                                        var subUrl = "/category/" + subItem.Slug + "-" + subItem.Id;
                                        <li>
                                            <a class="dropdown-item" href="@subUrl">@subItem.Title</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else if (item.ParentCategoryId == null && !item.IsParent)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@url">@item.Title</a>
                            </li>
                        }
                    }

                    <li class="nav-item">
                        <a class="nav-link"  href="/about">Thông tin</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
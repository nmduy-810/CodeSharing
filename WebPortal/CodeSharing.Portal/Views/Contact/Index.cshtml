@model ContactViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    Layout = "_SubLayout";
    ViewData["Title"] = "Liên hệ · Code Sharing";
    ViewData["Description"] = "Liên hệ · Code Sharing";
}

@section scripts {
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

<style>
    .error-message {
        margin: 2px 10px;
        overflow: hidden;
        display: block;
        color: red;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <!-- contact info item -->
        <div class="contact-item bordered rounded d-flex align-items-center">
            <span class="icon icon-phone"></span>
            <div class="details">
                <h3 class="mb-0 mt-0">Điện thoại</h3>
                <p class="mb-0">@Model.Contact.Phone</p>
            </div>
        </div>
        <div class="spacer d-md-none d-lg-none" data-height="30"></div>
    </div>
    <div class="col-md-4">
        <!-- contact info item -->
        <div class="contact-item bordered rounded d-flex align-items-center">
            <span class="icon icon-envelope-open"></span>
            <div class="details">
                <h3 class="mb-0 mt-0">Địa chỉ email</h3>
                <p class="mb-0">@Model.Contact.Email</p>
            </div>
        </div>
        <div class="spacer d-md-none d-lg-none" data-height="30"></div>
    </div>
    <div class="col-md-4">
        <!-- contact info item -->
        <div class="contact-item bordered rounded d-flex align-items-center">
            <span class="icon icon-map"></span>
            <div class="details">
                <h3 class="mb-0 mt-0">Nơi sống</h3>
                <p class="mb-0">@Model.Contact.Location</p>
            </div>
        </div>
    </div>
</div>
<div class="spacer" data-height="50"></div>
<!-- section header -->
<div class="section-header">
    <h3 class="section-title">Để lời lại nhắn</h3>
    <img src="~/images/wave.svg" class="wave" alt="wave"/>
</div>

<!-- Contact Form -->
@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{
    <div class="row">
        <div class="column col-md-6">
            <div class="form-group">
                <input asp-for="@Model.Support.Name" type="text" class="form-control" placeholder="Tên của bạn..">
                <span class="error-message" asp-validation-for="@Model.Support.Name"></span>
            </div>
        </div>
        <div class="column col-md-6">
            <div class="form-group">
                 <input asp-for="@Model.Support.Email" type="email" class="form-control" placeholder="Địa chỉ email">
                <span class="error-message" asp-validation-for="@Model.Support.Email"></span>
            </div>
        </div>
        <div class="column col-md-12">
            <div class="form-group">
                <input asp-for="@Model.Support.Subject" type="text" class="form-control" placeholder="Tiêu đề">
                <span class="error-message" asp-validation-for="@Model.Support.Subject"></span>
            </div>
        </div>
        <div class="column col-md-12">
            <div class="form-group">
                <textarea asp-for="@Model.Support.Message" class="form-control" rows="4" placeholder="Nội dung tin nhắn..."></textarea>
                <span class="error-message" asp-validation-for="@Model.Support.Message"></span>
            </div>
        </div>
    </div>
    <div class="g-recaptcha" data-sitekey="@Configuration.GetSection("ReCaptcha")["SiteKey"]"></div>
    <br/>
    <button type="submit" name="submit" id="submit" value="Submit" class="btn btn-default">Gửi</button>
    <!-- Send Button -->
}
<!-- Contact Form end -->